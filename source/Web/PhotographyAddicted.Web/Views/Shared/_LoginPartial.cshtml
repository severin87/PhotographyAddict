@using PhotographyAddicted.Web.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@inject SignInManager<PhotographyAddictedUser> SignInManager
@inject UserManager<PhotographyAddictedUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <button class="btn btn-link navbar-btn navbar-link logPartUser navbar-right  d-inline-block text-truncate" asp-controller="Users" asp-action="PreviewUserPost" asp-route-id="@UserManager.GetUserId(User) " data-toggle="tooltip" data-placement="bottom" title="@UserManager.GetUserName(User)">Hello @UserManager.GetUserName(User)!</button>
        <button type="submit" class="btn btn-link navbar-btn navbar-link navbar-right logPartUser" data-toggle="tooltip" data-placement="bottom" title="Logout">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link navbar-btn navbar-link logPartUser navbar-right" href="https://localhost:44385/Identity/Account/Register" data-toggle="tooltip" data-placement="bottom" title="Register">
        Register
    </a>
    <a class="btn btn-link navbar-btn navbar-link logPartUser navbar-right" href="https://localhost:44385/Identity/Account/Login" data-toggle="tooltip" data-placement="bottom" title="Login">
        Login
    </a>
}
