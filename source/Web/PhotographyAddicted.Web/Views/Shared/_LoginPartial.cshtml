@using PhotographyAddicted.Web.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@inject SignInManager<PhotographyAddictedUser> SignInManager
@inject UserManager<PhotographyAddictedUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @*<a class="btn btn-default btn-sm" asp-controller="User" asp-action="ViewUserProfile">View </a>*@
                <a asp-controller="User" asp-action="ViewUserProfile">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}

