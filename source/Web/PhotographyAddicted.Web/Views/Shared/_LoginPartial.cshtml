@using PhotographyAddicted.Web.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@inject SignInManager<PhotographyAddictedUser> SignInManager
@inject UserManager<PhotographyAddictedUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <button class="btn btn-link navbar-btn navbar-link logPartUser navbar-right" asp-controller="Users" asp-action="PreviewUser" asp-route-id="@UserManager.GetUserId(User)">Hello @UserManager.GetUserName(User)!</button>
        <button type="submit" class="btn btn-link navbar-btn navbar-link navbar-right logPartUser">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link navbar-btn navbar-link logPartUser navbar-right" href="https://localhost:44385/Identity/Account/Register">
        Register
    </a>
    <a class="btn btn-link navbar-btn navbar-link logPartUser navbar-right" href="https://localhost:44385/Identity/Account/Login">
        Login
    </a>
}
