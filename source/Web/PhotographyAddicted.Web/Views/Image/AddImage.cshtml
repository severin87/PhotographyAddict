@model PhotographyAddicted.Services.Models.Images.AddImageViewModel
@using PhotographyAddicted.Data.Models 
@{
    ViewData["Title"] = "AddImage";
}

<h2>AddImage</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddImage" method="POST" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>         

            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input type="file" asp-for="Picture" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageCategory" class="control-label"></label>
                <select asp-for="ImageCategory" asp-items="Html.GetEnumSelectList<ImageCategory>()">
                    <option selected="selected" class="form-control" value="">Select Category</option>
                </select>
                <span asp-validation-for="ImageCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

