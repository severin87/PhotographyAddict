@model PhotographyAddicted.Services.Models.Themes.CreateThemeInputViewModel

@{
    ViewData["Title"] = "CreateTheme";
}

<h2>CreateTheme</h2>

<h4>CreateThemeInputModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTheme">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorOpinion" class="control-label"></label>
                <textarea asp-for="AuthorOpinion" class="form-control" rows="12" cols="50"></textarea>
                <span asp-validation-for="AuthorOpinion" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="PhotographyAddictedUserId" class="control-label"></label>
                <input asp-for="PhotographyAddictedUserId" class="form-control" />
                <span asp-validation-for="PhotographyAddictedUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to HomePage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
