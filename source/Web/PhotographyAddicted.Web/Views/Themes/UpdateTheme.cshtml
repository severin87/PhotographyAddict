@model PhotographyAddicted.Services.Models.Themes.PreviewThemeViewModel
@using PhotographyAddicted.Data.Models
@using PhotographyAddicted.Services.DataServices.ImageService

@inject IImageService imageService

@{
    ViewData["Title"] = "UpdateTheme";
}

<div class="row">
    <div class="col-md-6 offset-md-2">
        <div class="jumbotron " style="min-height: 1250px; padding-top:15px; background-color:azure">

            <br>
            <h3>Update theme</h3>
            <hr class="my-4">
            <div class="row">


                <div class="col-md-6">
                    <form asp-action="UpdateTheme">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1" style="background-color:#17a2b8; color:black">Title</span>
                            </div>
                            <input asp-for="Title" type="text" class="form-control" aria-describedby="basic-addon1" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01"  style="background-color:#17a2b8; color:black;">Category</label>
                            </div>
                            <select class="custom-select" id="inputGroupSelect01" asp-for="ThemeCategory" asp-items="Html.GetEnumSelectList<ThemeCategory>()">
                                <option selected="">Select Category</option>
                            </select>
                            <span asp-validation-for="ThemeCategory" class="text-danger"></span>
                        </div>

                        <div hidden class="form-group">
                            <label asp-for="AuthorOpinion" class="control-label"></label>
                            <input asp-for="AuthorOpinion" class="form-control" />
                            <span asp-validation-for="AuthorOpinion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-info" type="submit" style="color:black;" data-toggle="tooltip" data-placement="bottom" title="Save changes">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="jumbotron " style="min-height: 1250px;  padding-top:15px; background-color:azure">
            <div style="padding-top:7px;">
                @foreach (var comment in imageService.PreviewImages(null).PreviewImages.OrderByDescending(x => x.UploadedDate).Take(40).OrderBy(x => Guid.NewGuid()).Take(5))
                {
                    <hr />
                    @if (comment.Picture != null)
                    {

                        <a asp-controller="Images" asp-action="PreviewImage" asp-route-id="@comment.Id" data-toggle="tooltip" data-placement="bottom" title="Go to the photo">
                            <img src="data:image;base64,@System.Convert.ToBase64String(comment.Picture)" style="padding-bottom:3px; padding-top:3px; max-width: 240px; width: 100%; max-height: 240px; height: 100%; " />
                        </a>
                    }
                }
            </div>
        </div>
    </div>
</div>


