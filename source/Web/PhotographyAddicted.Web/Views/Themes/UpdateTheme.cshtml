@model PhotographyAddicted.Services.Models.Themes.PreviewThemeViewModel
@using PhotographyAddicted.Data.Models

@{
    ViewData["Title"] = "UpdateTheme";
}

<h2>UpdateTheme</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateTheme">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThemeCategory" class="control-label"></label>
                <select asp-for="ThemeCategory" asp-items="Html.GetEnumSelectList<ThemeCategory>()">
                    <option selected="selected" class="form-control" value="">Select Category</option>
                </select>
                <span asp-validation-for="ThemeCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorOpinion" class="control-label"></label>
                <input asp-for="AuthorOpinion" class="form-control" />
                <span asp-validation-for="AuthorOpinion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

