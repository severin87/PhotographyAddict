@model PhotographyAddicted.Services.Models.Themes.AddThemeViewModel
@using PhotographyAddicted.Data.Models
@using PhotographyAddicted.Services.DataServices.ImageService

@inject IImageService imageService

@{
    ViewData["Title"] = "AddTheme";
}

<div class="row">
    <div class="col-md-6 offset-md-2">
        <div class="jumbotron " style="min-height: 1250px; padding-top:15px; background-color:azure">

            <br>
            <h3>Create new theme</h3>
            <hr class="my-4">
            <div class="row">
                <div class="col-md-8 ">
                    <form asp-action="AddTheme">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="input-group input-group-sm  mb-3">
                            <div class="input-group-prepend">
                                @*<span class="input-group-text  aquaLabel" id="basic-addon1" style="padding-right:43px;">Title</span>*@
                                <span class="input-group-text  aquaLabel" style="padding-right:11.25px; padding-left:10px;  " id="basic-addon1"><i class="far fa-clipboard"></i></span>
                            </div>
                            <input asp-for="Title" type="text" class="form-control" placeholder="Title.." aria-describedby="basic-addon1" style="border-top-right-radius: 3px; border-bottom-right-radius: 3px;" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="input-group input-group-sm  mb-3">
                            <div class="input-group-prepend">
                                @*<label class="input-group-text" for="inputGroupSelect01" style="padding-right:13px; background-color:#17a2b8; color:white;">Category</label>*@
                                <label class="input-group-text" for="inputGroupSelect01" style="padding-right:9.75px; background-color:#17a2b8; color:white;"><i class="fas fa-camera-retro"></i></label>
                            </div>
                            <select class="custom-select" id="inputGroupSelect01" style="border-top-right-radius: 3px; border-bottom-right-radius: 3px;" asp-for="ThemeCategory" asp-items="Html.GetEnumSelectList<ThemeCategory>()">
                                <option selected="">Select Category..</option>
                            </select>
                            <span asp-validation-for="ThemeCategory" class="text-danger"></span>
                        </div>
                        <div class="input-group input-group-sm  mb-3">
                            <div class="input-group-prepend">
                                @*<span class="input-group-text  aquaLabel" id="basic-addon1">Comment</span>*@
                                <span class="input-group-text  aquaLabel" id="basic-addon1"><i class="far fa-comments"></i></span>
                            </div>
                            <input asp-for="AuthorOpinion" type="text" placeholder="Write here first theme comment.." class="form-control" aria-describedby="basic-addon1" style="border-top-right-radius: 3px; border-bottom-right-radius: 3px;" />
                            <span asp-validation-for="AuthorOpinion" class="text-danger"></span>
                        </div>
                        <div>
                            <button class="btn btn-info btn-sm" type="submit" style=" float:left; margin-top:8px;" data-toggle="tooltip" data-placement="bottom" title="Save changes">Save</button>
                        </div>
                        <div>
                            <a class="btn btn-info btn-sm" asp-controller="Themes" asp-action="PreviewThemes" style=" margin-top:8px; float:right;" data-toggle="tooltip" data-placement="bottom" title="Go to themes">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="jumbotron " style="min-height: 1250px;  padding-top:15px; background-color:azure">
            <div style="padding-top:7px;">
                @foreach (var comment in imageService.PreviewImages(null).PreviewImages.OrderByDescending(x => x.UploadedDate).Take(40).OrderBy(x => Guid.NewGuid()).Take(5))
                {
                    <hr />
                    @if (comment.Picture != null)
                    {
                        <a asp-controller="Images" asp-action="PreviewImage" asp-route-id="@comment.Id" data-toggle="tooltip" data-placement="bottom" title="Go to the photo">
                            <img src="data:image;base64,@System.Convert.ToBase64String(comment.Picture)" style="padding-bottom:3px; padding-top:3px; max-width: 240px; width: 100%; max-height: 240px; height: 100%; " />
                        </a>
                    }
                }
            </div>
        </div>
    </div>
</div>


