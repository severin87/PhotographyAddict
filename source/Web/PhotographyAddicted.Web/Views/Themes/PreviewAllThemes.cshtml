@model PhotographyAddicted.Services.Models.Themes.ThemesViewModel

@{
    ViewData["Title"] = "PreviewAllThemes";
}

<h2>
    @ViewData["Title"] -
    @if (this.User.Identity.IsAuthenticated)
    {
        <a asp-area="" asp-controller="Themes" asp-action="CreateTheme" style="color: orangered">CreateTheme</a>
        @*<li><a asp-area="" asp-controller="User" asp-action="ViewUserProfile">User Profile</a></li>*@
    }
</h2>

@foreach (var theme in Model.ThemeInfos)
{
<h1>@theme.Title - @theme.UserName - @theme.ThemeCategory</h1>
    <a class="btn btn-default btn-sm" asp-controller="Themes" asp-action="SpecificTheme" asp-route-id="@theme.Id">View </a>
}

