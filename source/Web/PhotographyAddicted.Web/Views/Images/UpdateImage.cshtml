@model PhotographyAddicted.Services.Models.Images.PreviewImageViewModel
@using PhotographyAddicted.Data.Models

@{
    ViewData["Title"] = "UpdateImage";
}

<h2>EditPictureInfo</h2>

<h4>ImagePreviewViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateImage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Picture != null)
            {
                <div class="form-group">
                <div class="modal-body" id="modal-body" style="cursor: zoom-out; width: 722px; height: 635px;">
                    <img class="img-responsive" style="max-height:100%; position: relative; top: 50%; transform: translateY(-50%);" src="data:image;base64,@System.Convert.ToBase64String(Model.Picture)">
                </div>
            </div>
            }

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageCategory" class="control-label"></label>
                <select asp-for="ImageCategory" asp-items="Html.GetEnumSelectList<ImageCategory>()">
                    <option selected="selected" class="form-control" value="">Select Category</option>
                </select>
                <span asp-validation-for="ImageCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

