@model PhotographyAddicted.Services.Models.Images.PreviewImageViewModel
@using PhotographyAddicted.Services.DataServices.ImageService
@inject IImageService imageService

@using Microsoft.AspNetCore.Http
@using System.Security.Claims

@{
    ViewData["Title"] = "PreviewImage";
}

<h2>ViewPictureDetails</h2>

@{
    if (this.User.Identity.IsAuthenticated)
    {
        string userId = this.User.FindFirstValue(ClaimTypes.NameIdentifier);

        if (imageService.IsImageInFavouriteImage(userId, Model.Id))
        {
            <a class="btn btn-default btn-sm" style="color:green" asp-controller="Images" asp-action="DeleteImageToFavourites"
               asp-route-userId="@userId" asp-route-imageId="@Model.Id">DeleteImageToFavourites</a>
        }
        else
        {
            <a class="btn btn-default btn-sm" style="color:orangered" asp-controller="Images" asp-action="AddImageToFavourites"
               asp-route-userId="@userId" asp-route-imageId="@Model.Id">AddImageToFavourites</a>
        }
    }
}

