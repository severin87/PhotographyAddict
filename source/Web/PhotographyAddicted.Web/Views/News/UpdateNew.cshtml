@model PhotographyAddicted.Services.Models.News.PreviewNewViewModel
@using PhotographyAddicted.Services.DataServices.CommonService
@using PhotographyAddicted.Services.DataServices

@inject ICommonService commonService
@inject INewService  newService

@{
    ViewData["Title"] = "UpdateNew";
}

<div class="row">
    <div class="col-md-5 offset-md-2">
        <div class="jumbotron " style="min-height: 930px; padding-top:15px; background-color:azure">
            <br>
            <div class="alert alert-info" role="alert">
                <br>
                <h3>Update new</h3>
                <hr class="my-4">
                <div class="row">
                    <div class="col-md-12 ">
                        <form asp-action="UpdateNew">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="input-group input-group-sm  mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text  aquaLabel" id="basic-addon1"><i class="far fa-clipboard"></i></span>
                                </div>
                                <input asp-for="Title" type="text" class="form-control" placeholder="Title.." aria-describedby="basic-addon1" style="border-top-right-radius: 3px; border-bottom-right-radius: 3px;" data-toggle="tooltip" data-placement="bottom" title="Title" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="input-group input-group-sm  mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text  aquaLabel" id="basic-addon1"><i class="far fa-file-alt"></i></span>
                                </div>
                                <input asp-for="TextContent" type="text" placeholder="Write here new content.." class="form-control" aria-describedby="basic-addon1" style="border-top-right-radius: 3px; border-bottom-right-radius: 3px;" data-toggle="tooltip" data-placement="bottom" title="Content" />
                                <span asp-validation-for="TextContent" class="text-danger"></span>
                            </div>
                            <div hidden class="form-group">
                                <label asp-for="PhotographyAddictedUserId" class="control-label"></label>
                                <input asp-for="PhotographyAddictedUserId" class="form-control" />
                                <span asp-validation-for="PhotographyAddictedUserId" class="text-danger"></span>
                            </div>
                            <div style="margin-top:4px;">
                                <button class="btn btn-info btn-sm"  type="submit" style="margin-right:15px;  margin-top:8px; padding: 4px 8px; " data-toggle="tooltip" data-placement="bottom" title="Save new">Publish</button>
                                <a class="btn btn-info btn-sm" asp-controller="News" asp-action="PreviewNew" asp-route-id="@Model.Id" style=" margin-top:8px; padding:4px 9.875px;" data-toggle="tooltip" data-placement="bottom" title="Go to news">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="jumbotron " style="min-height: 930px; padding-top:10px; background-color:azure">
            <div style="padding-top:12px">
                @foreach (var comment in newService.PreviewNews(null).PreviewNews.OrderByDescending(x => x.CreationDate).Take(30).OrderBy(x => Guid.NewGuid()).Take(5))
                {
                    <div style="font-size:x-small;  padding-top:13px; padding-bottom:13px;">
                        @commonService.CreationDate(comment.CreationDate)
                        <svg height="1" width="218">
                            <line x1="0" y1="0" x2="1000" y2="0" style="stroke:rgb(216, 216, 216);stroke-width:1" />
                        </svg>
                    </div>
                    <div class="row">
                        <a class="col-md-5" asp-controller="News" asp-action="PreviewNew" asp-route-id="@comment.Id" data-toggle="tooltip" data-placement="bottom" title="Go to the new">
                            <img src="data:image;base64,@System.Convert.ToBase64String(comment.NewImage )" style="max-height: 110px; width: auto" />
                        </a>
                        <div class="col-md-7">
                            <a class="news-style" style="word-wrap: break-word; font-size: 85%; font-weight: bold;" asp-controller="News" asp-action="PreviewNew" asp-route-id="@comment.Id" data-toggle="tooltip" data-placement="bottom" title="Go to the new"> @comment.Title</a>
                            <br />
                            <a style="font-size: 70%; font-weight: bold; font: bold Georgia;">@comment.ComentsCount</a>
                            <i class="far fa-comment-alt" style="font-size: 90%;" data-toggle="tooltip" data-placement="bottom" title="New comments"></i>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>