@model PhotographyAddicted.Services.Models.Users.EditUserViewModel
@using PhotographyAddicted.Data.Models

@{
    ViewData["Title"] = "ChangeProfilePicture";
}

<h2>ChangeProfilePicture</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeProfilePicture" method="POST" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProfilePicture" class="control-label"></label>
                <input type="file" asp-for="ProfilePicture" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

