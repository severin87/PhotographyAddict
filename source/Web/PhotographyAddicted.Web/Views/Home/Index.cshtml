@using PhotographyAddicted.Services.DataServices
@using PhotographyAddicted.Services.DataServices.ImageService
@inject INewService  newService
@inject IThemeService themeService
@inject IImageService imageService

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-5 offset-md-2">
        <div class="jumbotron " style="min-height: 1500px; padding-top:15px; background-color:azure">
            <div>
                <a asp-controller="Images" asp-action="PreviewImage" asp-route-id="@imageService.PreviewImageOfTheDay().Id">
                    <img src="data:image;base64,@System.Convert.ToBase64String(imageService.PreviewImageOfTheDay().Picture) "
                         style="max-width: 525px; max-height: 400px; display: block;  margin-left: auto; margin-right: auto; " />
                </a>
            </div>
            <div>
                <a class="news-style" style="float:left; font-weight: bold;" asp-controller="Users" asp-action="PreviewUser" asp-route-id="@imageService.PreviewImageOfTheDay().PhotographyAddictedUser.Id">Author: @imageService.PreviewImageOfTheDay().PhotographyAddictedUser.UserName</a>
                <a class="news-style" style="float:right; font-weight: bold;" asp-controller="Images" asp-action="PreviewImage" asp-route-id="@imageService.PreviewImageOfTheDay().Id">Title: @imageService.PreviewImageOfTheDay().Title</a>
            </div>
            <hr class="my-4">
            
            <div class="row">
                @foreach (var comment in themeService.PreviewThemes(null).PreviewThemes.OrderByDescending(x => x.CreationDate).Take(3))
                {
                    <div class="col-md-12">                    
                       <div class="alert alert-info" role="alert">
                          @*<p style="font-size:smaller; margin-bottom:2px; margin-top:2px"> This is a success alert—check it out!</p>*@
                          <a class="d-inline-block text-truncate" style="font-size:medium;  font-weight: bold; margin-bottom:2px; margin-top:2px; color: black; max-width: 489px;" asp-controller="Themes" asp-action="PreviewTheme" asp-route-id="@comment.Id">@comment.Title</a>
                          <hr style="margin-bottom:2px; margin-top:2px">
                          <p style=" font-size:x-small; margin-bottom:2px; margin-top:2px">@comment.CreationDate - @comment.ThemeComments.Count()</p>
                       </div>
                    </div>                    
                }
            </div>
            @*<a class="btn btn-default btn-sm" asp-controller="Images" asp-action="PreviewImage" asp-route-id="@comment.Id">Check new!</a>*@
        </div>
    </div>

    <div class="col-md-3">
        <div class="jumbotron " style="min-height: 1500px; padding-top:15px; background-color:azure">
            <h3>
                <a class="news-style" asp-controller="News" asp-action="PreviewNews">Preview all News</a>
            </h3>
            <hr class="my-4">
            @foreach (var comment in newService.PreviewNews(null).PreviewNews.OrderByDescending(x => x.CreationDate).Take(5))
            {
                <div class="row">
                    <a class="col-md-5" asp-controller="News" asp-action="PreviewNew" asp-route-id="@comment.Id">
                        <img src="data:image;base64,@System.Convert.ToBase64String(comment.NewImage )" style="max-height: 110px; width: auto" />
                    </a>

                    <div class="col-md-7">
                        <a class="news-style" asp-controller="News" asp-action="PreviewNew" asp-route-id="@comment.Id" style="font-size: 85%; font-weight: bold;"> @comment.Title</a>
                        <p style="font-size: 80%;"> @comment.TextContent</p>
                    </div>
                </div>
                <hr class="my-4">
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-8">
        <hr />
        <div>
            <h1>
                <a asp-controller="Images" asp-action="PreviewImages">Preview all Images</a>
                <br>
            </h1>
            @foreach (var comment in imageService.PreviewImages(null).PreviewImages.OrderByDescending(x => x.UploadedDate).Take(3))
            {
                <h4>
                    @if (comment.Picture != null)
                    {
                        <img src="data:image;base64,@System.Convert.ToBase64String(comment.Picture)" style="max-height: 130px; height: 70%; width: auto;" />
                    }

                    @comment.Title - @comment.ImageComments.Count()
                    <a class="btn btn-default btn-sm" asp-controller="Images" asp-action="PreviewImage" asp-route-id="@comment.Id">Check new!</a>
                </h4>
            }
        </div>
        <hr />

        <div>
            <h1>
                <a asp-controller="Themes" asp-action="PreviewThemes">Preview all Themes</a>
                <br>
            </h1>
            @foreach (var comment in themeService.PreviewThemes(null).PreviewThemes.OrderByDescending(x => x.CreationDate).Take(3))
            {
                <h4>
                    @comment.Title - @comment.ThemeComments.Count()
                    <a class="btn btn-default btn-sm" asp-controller="Themes" asp-action="PreviewTheme" asp-route-id="@comment.Id">Check new!</a>
                </h4>
            }
        </div>
    </div>
</div>

